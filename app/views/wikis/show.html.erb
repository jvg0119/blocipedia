
<h4><%= markdown_to_html @wiki.title %></h4>

<!-- <p><%#= @wiki.body %></p>
 -->
<p><%= markdown_to_html(@wiki.body) %></p>

<%#= raw Markdown.new(@wiki.body).to_html %>
<%#= Markdown.new(@wiki.body).to_html.html_safe %>
<%#= markdown_to_html_test(@wiki.body) %>

<%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-success" if policy(@wiki).edit? %>
<%= link_to "Delete", wiki_path(@wiki), method: :delete, data: { confirm: "Are you sure you want to delete this wiki?"}, class: "btn btn-danger" if policy(@wiki).destroy? %>

