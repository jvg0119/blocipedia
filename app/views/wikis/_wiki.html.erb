
<tbody>
  <tr>
    <td><%= link_to wiki.title, wiki_path(wiki) %></td>
    <td><%= link_to "edit", edit_wiki_path(wiki) if policy(wiki).edit? %></td>
    <td><%= link_to "delete", wiki_path(wiki), method: :delete, data: { confirm: "Are you sure you want to delete this wiki?"} if policy(wiki).destroy?  %></td>
  </tr>
</tbody>


