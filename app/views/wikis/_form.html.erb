
<div class="row col-md-6">

	<%= form_for @wiki do |f| %>

	<% if @wiki.errors.any? %>
	<div class="panel" style="background: #F2DEDE">
		<h4>Please correct the <%= pluralize @wiki.errors.count, "Error" %> to create wiki:</h4>
			<%= render 'shared/error_message', locals: { wiki: @wiki } %>
	</div>
	<% end %>
	
	
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control", placeholder: "Enter name", autofocus: true %>
		</div>

		<div class="form-group">
			<%= f.label :body %>
			<%= f.text_area :body, rows: 4, class: "form-control", placeholder: "Enter body" %>
		</div>

		<div class="form-group">
			<%= f.submit class: "btn btn-success" %>		
		</div>

	<% end %>


</div>




